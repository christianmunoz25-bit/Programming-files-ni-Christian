<body>
    <div class="container">
        <h1>üìö Flashcard Study App</h1>
        
        <div class="card-count" id="cardCount">0 cards total | 0 unmastered</div>
        
        <div class="controls">
            <button id="addCardBtn">‚ûï Create New Card</button>
            <button id="showAllBtn" class="filter-btn active">All Cards</button>
            <button id="showUnmasteredBtn" class="filter-btn">üìñ Unmastered</button>
            <button id="showMasteredBtn" class="filter-btn">‚≠ê Mastered</button>
        </div>

        <div id="flashcardContainer">
            <div class="no-cards">Create your first flashcard to get started!</div>
        </div>
    </div>

    <!-- Add Card Modal -->
    <div id="addCardModal" class="modal">
        <div class="modal-content">
            <h2>üìù Create New Flashcard</h2>
            <form id="cardForm">
                <div class="form-group">
                    <label for="frontText">Front (Question):</label>
                    <input type="text" id="frontText" placeholder="What is the capital of France?" required>
                </div>
                <div class="form-group">
                    <label for="backText">Back (Answer):</label>
                    <input type="text" id="backText" placeholder="Paris" required>
                </div>
                <div style="display: flex; gap: 10px; justify-content: flex-end;">
                    <button type="button" id="cancelBtn">Cancel</button>
                    <button type="submit">‚úÖ Add Card</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        class FlashcardApp {
            constructor() {
                this.cards = JSON.parse(localStorage.getItem('flashcards')) || [];
                this.currentFilter = 'all';
                this.currentCardIndex = 0;
                this.init();
            }

            init() {
                this.bindEvents();
                this.updateCardCount();
                this.renderCards();
            }

            bindEvents() {
                // Add card modal
                document.getElementById('addCardBtn').addEventListener('click', () => {
                    this.showModal();
                });

                document.getElementById('cardForm').addEventListener('submit', (e) => {
                    e.preventDefault();
                    this.addCard();
                });

                document.getElementById('cancelBtn').addEventListener('click', () => {
                    this.hideModal();
                });

                // Filter buttons
                document.getElementById('showAllBtn').addEventListener('click', () => this.setFilter('all'));
                document.getElementById('showUnmasteredBtn').addEventListener('click', () => this.setFilter('unmastered'));
                document.getElementById('showMasteredBtn').addEventListener('click', () => this.setFilter('mastered'));

                // Close modal on outside click
                document.getElementById('addCardModal').addEventListener('click', (e) => {
                    if (e.target.classList.contains('modal')) {
                        this.hideModal();
                    }
                });
            }

            showModal() {
                document.getElementById('addCardModal').style.display = 'flex';
                document.getElementById('frontText').focus();
            }

            hideModal() {
                document.getElementById('addCardModal').style.display = 'none';
                document.getElementById('cardForm').reset();
            }

            addCard() {
                const front = document.getElementById('frontText').value.trim();
                const back = document.getElementById('backText').value.trim();

                if (front && back) {
                    this.cards.push({
                        id: Date.now(),
                        front,
                        back,
                        mastered: false
                    });
                    this.saveCards();
                    this.renderCards();
                    this.updateCardCount();
                    this.hideModal();
                }
            }

            setFilter(filter) {
                this.currentFilter = filter;
                this.updateFilterButtons();
                this.renderCards();
            }

            updateFilterButtons() {
                document.querySelectorAll('.filter-btn').forEach(btn => {
                    btn.classList.remove('active');
                });
                document.getElementById(`show${this.currentFilter.charAt(0).toUpperCase() + 
                    this.currentFilter.slice(1)}Btn`).classList.add('active');
            }

            toggleMastered(cardId) {
                const card = this.cards.find(c => c.id === cardId);
                if (card) {
                    card.mastered = !card.mastered;
                    this.saveCards();
                    this.updateCardCount();
                    this.renderCards();
                }
            }

            deleteCard(cardId) {
                this.cards = this.cards.filter(c => c.id !== cardId);
                this.saveCards();
                this.updateCardCount();
                this.renderCards();
            }

            getFilteredCards() {
                switch (this.currentFilter) {
                    case 'unmastered':
                        return this.cards.filter(card => !card.mastered);
                    case 'mastered':
                        return this.cards.filter(card => card.mastered);
                    default:
                        return this.cards;
                }
            }

            renderCards() {
                const container = document.getElementById('flashcardContainer');
                const filteredCards = this.getFilteredCards();

                if (filteredCards.length === 0) {
                    container.innerHTML = '<div class="no-cards">' + 
                        (this.currentFilter === 'all' ? 'Create your first flashcard!' : 
                         No ${this.currentFilter} cards yet!) + '</div>';
                    return;
                }

                container.innerHTML = filteredCards.map((card, index) => `
                    <div class="flashcard">
                        <div class="card-inner" onclick="app.toggleFlip(${index})">
                            <div class="card-front ${card.mastered ? 'mastered' : ''}">
                                ${card.front}
                            </div>
                            <div class="card-back ${card.mastered ? 'mastered' : ''}">
                                ${card.back}
                                <div style="margin-top: 20px; font-size: 0.7em; opacity: 0.9;">
                                    ${card.mastered ? '‚≠ê Mastered' : 'üìñ Keep practicing'}
                                </div>
                            </div>
                        </div>
                        <div style="text-align: center; margin-top: 15px; display: flex; gap: 10px; justify-content: center;">
                            <button onclick="app.toggleMastered(${card.id})" 
                                    style="background: ${card.mastered ? '#f44336' : '#4CAF50'}; color: white; padding: 8px 16px; font-size: 0.9em;">
                                ${card.mastered ? 'Undo Mastered' : 'Mark Mastered'}
                            </button>
                            <button onclick="app.deleteCard(${card.id})" 
                                    style="background: #f44336; color: white; padding: 8px 16px; font-size: 0.9em;">
                                Delete
                            </button>
                        </div>
                    </div>
                `).join('');

                // Re-attach flip event listeners
                filteredCards.forEach((_, index) => {
                    const cardInner = container.querySelectorAll('.card-inner')[index];
                    cardInner.addEventListener('click', () => this.toggleFlip(index));
                });
            }

            toggleFlip(index) {
                const cardInner = document.querySelectorAll('.card-inner')[index];
                cardInner.classList.toggle('flipped');
            }

            updateCardCount() {
                const total = this.cards.length;
                const unmastered = this.cards.filter(c => !c.mastered).length;
                document.getElementById('cardCount').textContent = 
                    ${total} cards total | ${unmastered} unmastered;
            }

            saveCards() {
                localStorage.setItem('flashcards', JSON.stringify(this.cards));
            }
        }

        // Initialize app
        const app = new FlashcardApp();
    </script>
</body>
</html>
